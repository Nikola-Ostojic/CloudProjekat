@using WebRole.Models

@model Linija


@{
    ViewBag.Title = "Linija";
}

<h2>Linija</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"
        type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"
        type="text/javascript"></script>

@using (Html.BeginForm("DodajLiniju", "Home", FormMethod.Post, new
{
    enctype =
"multipart/form-data"
}))

{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Linija</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.ID)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Oznaka)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Oznaka)
            @Html.ValidationMessageFor(model => model.Oznaka)
        </div>


        <p>
            <input type="submit" value="Dodaj" />
        </p>

    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
